rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Require authentication for all file operations
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Specific rules for invoice and estimate files
    match /invoices/{projectId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    match /estimates/{projectId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Rules for order PDF templates
    match /templates/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Rules for supplier documents
    match /supplier-documents/{supplierId}/{fileName} {
      allow read, write: if request.auth != null;
    }
  }
}